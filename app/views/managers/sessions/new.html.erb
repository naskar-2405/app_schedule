<h2>管理者ログイン</h2>

<%= form_with model: @manager, url: manager_session_path, id: "new_manager", class: "new_manager", local:true do |f| %>
  <div class="field">
    <%= f.label :id, "ID" %><br />
    <%= f.text_field :id, autofocus: true, autocomplete: "id" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, id: "password_field", autocomplete: "current-password" %><br>
    <%= f.check_box :show_password, id: "show_password" %>
    <%= label_tag :show_password, "パスワードを表示" %>
  </div>


  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>


